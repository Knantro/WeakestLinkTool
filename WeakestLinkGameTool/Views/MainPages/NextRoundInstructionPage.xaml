<UserControl x:Class="WeakestLinkGameTool.Views.MainPages.NextRoundInstructionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:WeakestLinkGameTool.Assets.Controls"
             xmlns:mainVMs="clr-namespace:WeakestLinkGameTool.ViewModels.MainVMs"
             mc:Ignorable="d"
             Focusable="True"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.InputBindings>
        <KeyBinding Key="Left" Command="{Binding BackInstructionCommand}"/>
        <KeyBinding Key="Right" Command="{Binding NextInstructionCommand}"/>
        <KeyBinding Key="D1" Command="{Binding HideFullBankVisibleCommand}"/>
        <KeyBinding Key="D2" Command="{Binding ShowFullBankCommand}"/>
        <KeyBinding Key="Enter" Command="{Binding StartRoundCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.DataContext>
        <mainVMs:NextRoundInstructionVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/BaseStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{StaticResource CommonBackgroundBrush}"
          ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:OutlinedTextBlock Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultText}"
                                    Text="{Binding CurrentInstruction}"
                                    TextAlignment="Center" 
                                    FontSize="50"/>
        
        <Button Grid.Row="2" Grid.Column="0"
                Height="140"
                Width="280"
                Style="{StaticResource DefaultButton}"
                Content="(←) Назад"
                FontSize="32"
                Command="{Binding BackInstructionCommand}" />
        
        <StackPanel Grid.Row="2" Grid.Column="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Height="140"
                    Width="280"
                    Style="{StaticResource DefaultButton}"
                    Content="(1) Скрыть банк"
                    FontSize="32"
                    Margin="20 0"
                    Command="{Binding HideFullBankVisibleCommand}" />
            
            <Button Height="140"
                    Width="280"
                    Style="{StaticResource DefaultButton}"
                    Content="(2) Показать банк"
                    FontSize="32"
                    Margin="20 0"
                    Command="{Binding ShowFullBankCommand}" />
        </StackPanel>
        
        <Button Grid.Row="2" Grid.Column="2"
                Height="140"
                Width="280"
                Style="{StaticResource DefaultButton}"
                Content="(→) Далее"
                Visibility="{Binding IsLastInstruction, Converter={StaticResource InvertVisibilityConverter}}"
                FontSize="32"
                Command="{Binding NextInstructionCommand}"/>
        
        <Button Grid.Row="2" Grid.Column="2"
                Height="140"
                Width="280"
                Visibility="{Binding IsLastInstruction, Converter={StaticResource VisibilityConverter}}"
                Style="{StaticResource DefaultButton}"
                Content="(↵) Начать раунд"
                FontSize="32"
                Command="{Binding StartRoundCommand}" />
    </Grid>
</UserControl>